<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 text-gray-800">
  <!-- Header -->
 
  <%- include('../partials/header') %>
  <!-- Hero Section -->
  <section class="relative bg-[url('https://source.unsplash.com/1600x900/?airbnb,home')] bg-cover bg-center min-h-screen py-16 px-4">
    <div class="bg-black bg-opacity-70 p-10 rounded-xl text-center max-w-7xl mx-auto">
      <h2 class="text-white text-4xl sm:text-5xl font-bold mb-10">Here are are your favourite home</h2>
      
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <% favHomes.forEach(home => { %>
          <div class="bg-white rounded-2xl overflow-hidden shadow-xl transition-transform hover:scale-105">
            <!-- Image -->
            <img 
            src="<%= home.image %>" 
            alt="<%= home.HouseName %>" 
            class="w-100 h-100 object-cover rounded-lg shadow-md"
          />
            
            <!-- Details -->
            <div class="p-5 text-left">
              <h3 class="text-xl font-semibold text-red-600 mb-1"><%= home.HouseName %></h3>
              <p class="text-gray-700 mb-1"><strong>Price:</strong> ₹<%= home.price %> / night</p>
              <p class="text-gray-700 mb-1"><strong>Location:</strong> <%= home.location %></p>
              <p class="text-yellow-500"><strong>Rating:</strong> <%= home.rating %> ⭐</p>
             
              <a href="/homes/<%= home.id %>" class="mt-4 inline-block text-red-600 font-semibold hover:underline">View Details</a>
            </div>
            <%- include('../partials/favorite',{home:home}) %>
          </div>
        <% }) %>
      </div>
  
      <p class="text-gray-200 mt-12 text-lg">Discover cozy stays, unique homes, and unforgettable experiences around the globe.</p>
      <a href="/host/add-home" class="mt-6 inline-block bg-white text-red-600 font-semibold px-6 py-3 rounded-full shadow-lg hover:bg-gray-100 transition">Become a Host</a>
    </div>
  </section>
  
  



