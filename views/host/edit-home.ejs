<%- include('../partials/head') %>
</head>
<body class="bg-white min-h-screen flex flex-col">
  <!-- Header -->
  <%- include('../partials/header') %>

  <main class="flex-grow flex items-center justify-center px-4 py-10">
    <div class="bg-white  rounded-2xl shadow-lg p-8 w-full max-w-xl">
      <h2 class="text-2xl font-semibold mb-6 text-center text-gray-800"><%= editing ? "Edit" :"Add Your Home" %></h2>
      <form action="/host/<%= editing ? "edit-home" : "add-home" %>" method="POST" class="space-y-6"> 
        <div>
          <input type="hidden" name="_id" value="<%= editing ? home._id :'' %>"  />
          <label for="HouseName" class="block text-sm font-medium text-gray-700 mb-1">House Name</label>
          
          <input
            type="text"
            id="HouseName"
            name="HouseName"
            placeholder="<Enter HouseName>"
              value="<%= editing ? home.HouseName: '' %>"
              
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
          />
          <label for="price" class="block text-sm font-medium text-gray-700 mb-1">price</label>
          <input
          type="text"
          id="price"
          name="price"
          placeholder="<Enter Price>"
            value="<%= editing ? home.price:'' %>"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
        /> 
        <label for="" class="block text-sm font-medium text-gray-700 mb-1">location</label>
        <input
        type="text"
        id="Location"
        name="Location"
        placeholder="Enter Location"
        value="<%= editing ? home.Location :'' %>"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
      />
      <label for="" class="block text-sm font-medium text-gray-700 mb-1">ratinge</label>
      <input
      type="text"
      id="rating"
      name="rating"
      placeholder="Enter Rating"
      value="<%= editing ? home.rating : ''%>"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
    />
    <label for="image" class="block text-sm font-medium text-gray-700 mb-1">Image URL</label>
    <input
      type="text"
      id="image"
      name="image"
      placeholder="Enter Url"
        value="<%= editing ? home.image :'' %>"
    
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
    /> 
    <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
    <textarea
            
      id="description"
      name="description"
      placeholder="Enter a brief description of your home"
    
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
    ><%= editing ? home.description : '' %></textarea>
        </div>

       
        <div class="text-center">
          <button 
            type="submit"
            class="w-full bg-red-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-red-600 transition"
          >
           <%= editing ? "Edit" :"Submit" %> 
          </button>
        </div>
      </form>
    </div>
  </main>

 
  <footer class="bg-white shadow-inner mt-10">
    <div class="max-w-7xl mx-auto px-4 py-4 text-center text-sm text-gray-500">
      &copy; 2023 Your Company. All rights reserved.
    </div>
  </footer>
</body>
</html>
