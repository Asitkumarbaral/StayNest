  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    <!-- Logo -->
    <h1 class="text-2xl font-bold text-red-600">
      <a href="/">StayNest</a>
    </h1>

    <nav aria-label="Main Navigation">
      <ul class="flex items-center space-x-8 text-sm font-medium text-gray-700">
        <li>
          <a href="/" class="hover:text-red-600 transition-colors duration-200 ease-in-out">Index</a>
        </li>
        <% if(isLogin) { %>
          <li>
            <a href="/index" class="hover:text-red-600 transition-colors duration-200 ease-in-out">Home-List</a>
          </li>
          <li>
            <a href="/host/add-home" class="hover:text-red-600 transition-colors duration-200 ease-in-out">Add Home</a>
          </li>
          <li>
            <a href="/bookings" class="hover:text-red-600 transition-colors duration-200 ease-in-out">Bookings</a>
