            <a href="/host/home-list" class="hover:text-red-600 transition-colors duration-200 ease-in-out">Host-HomeList</a>
          </li>
          <li>
            <form action="/logout" method="post" style="display:inline;">
              <button type="submit" class="hover:text-red-600 transition-colors duration-200 ease-in-out bg-transparent border-none cursor-pointer">
                Logout
              </button>
            </form>
          </li>
        <% } else { %>
          <li>
            <a href="/login" class="hover:text-red-600 transition-colors duration-200 ease-in-out">Login</a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
